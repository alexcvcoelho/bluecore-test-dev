<script>
  var http = axios.create({
    baseURL: "<%- apiUrl%>",
    timeout: 10000,
  });

  var app = new Vue({
    el: "#app",
    data: {
      users: [],
    },
    methods: {
      loadUsers() {
        http.get("/users").then((response) => {
          this.users = response.data;
        });
      },
    },
    mounted() {
      this.loadUsers();
    },
  });
</script>
